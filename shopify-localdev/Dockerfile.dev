FROM gcr.io/shopify-docker-images/apps/ci/nginx-e2e-test-runner:0a7141f1035ae606b47c3faf0095e5f0220a23b5
# You can also build your own test runnner if you want


RUN apk add sudo vim
RUN luarocks install luabenchmark

RUN ln -sf /dev/stdout /var/log/nginx/access.log \
    && ln -sf /dev/stderr /var/log/nginx/error.log

RUN set -o vi

EXPOSE 443
WORKDIR /etc/nginx/lua

CMD ["nginx"]
